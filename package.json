{
  "name": "@colinbendell/human-json",
  "version": "1.1.1",
  "description": "Human readable JSON stringifier with zero dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "humanjson": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "mkdir -p dist && cp src/* dist/ && chmod +x dist/cli.js && tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "update-fixtures": "node scripts/update-fixtures.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "json",
    "stringify",
    "format",
    "human-readable",
    "pretty-print",
    "formatter"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "bun-types": "^1.3.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
